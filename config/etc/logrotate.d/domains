# Domain logs in subdirectories (e.g., /var/log/domains/example.com/*.log)
/var/log/domains/*/*.log {
  daily
  missingok
  rotate 30
  compress
  delaycompress
  notifempty
  create 644 www-data www-data
  sharedscripts
  postrotate
    if [ -f /run/nginx.pid ]; then
      kill -USR1 `cat /run/nginx.pid`
    fi
  endscript
}

# Admin subdomain logs at root level (e.g., /var/log/domains/admin.example.com-*.log)
/var/log/domains/admin.*-nginx-*.log {
  daily
  missingok
  rotate 30
  compress
  delaycompress
  notifempty
  create 644 www-data www-data
  sharedscripts
  postrotate
    if [ -f /run/nginx.pid ]; then
      kill -USR1 `cat /run/nginx.pid`
    fi
  endscript
}
