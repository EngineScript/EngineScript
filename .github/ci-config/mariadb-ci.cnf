# MariaDB CI Configuration for EngineScript Testing
# This file contains MariaDB-specific settings optimized for GitHub Actions CI environment

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqld_safe]
socket = /var/run/mysqld/mysqld.sock
nice = 0

[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# CI-specific optimizations (reduced memory usage for GitHub Actions)
innodb_buffer_pool_size = 512M
innodb_log_file_size = 64M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Reduced thread and connection limits for CI
max_connections = 50
thread_cache_size = 8
table_open_cache = 256
table_definition_cache = 128

# Temporary table settings
tmp_table_size = 32M
max_heap_table_size = 32M

# MyISAM settings
key_buffer_size = 16M
myisam_sort_buffer_size = 8M

# Logging (disabled for faster CI)
slow_query_log = 0
general_log = 0

# Binary logging (disabled for CI)
skip-log-bin

# Performance settings for CI
skip-external-locking
skip-name-resolve

# Security settings
bind-address = 127.0.0.1

[mysqldump]
quick
quote-names
max_allowed_packet = 16M

[mysql]
#no-auto-rehash

[myisamchk]
key_buffer_size = 16M
sort_buffer_size = 4M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
